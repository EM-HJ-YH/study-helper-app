<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.hansung.android.studyhelper.MypageActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="26dp">

            <Button
                android:id="@+id/recruitment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3F51B5"
                android:text="Recruitment"
                android:textSize="10dp" />

            <Button
                android:id="@+id/mypage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="My Page"
                android:textSize="10dp" />

            <Button
                android:id="@+id/myteam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3F51B5"
                android:text="My Team"
                android:textSize="10dp" />

            <Button
                android:id="@+id/teamcalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3F51B5"
                android:text="Team Calendar"
                android:textSize="9dp" />

            <Button
                android:id="@+id/studycafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3F51B5"
                android:text="StudyCafe"
                android:textSize="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/idview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/nameview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/pwview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/majorview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/adview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textSize="20dp" />


            <Button
                android:id="@+id/editinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원정보 수정" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>